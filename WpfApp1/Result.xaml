<Window x:Class="WpfApp1.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="检查结果" Height="170" Width="250">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="2"  Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="chde" Content="查看细节" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="Check_Click"/>
            <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="20,0,0,0"  Click="OK_Click"/>
            
        </StackPanel>
        
        <TextBlock Grid.Row="0" Name="Name" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Name="Results" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>

    </Grid>
</Window>
